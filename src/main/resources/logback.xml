<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>
	
	<logger name="org.openrdf" level="INFO"></logger>
	<logger name="it.polimi.deib.streams.oracle.Oracle" level="INFO"></logger>
	<logger name="it.polimi.deib.streams.oracle.result.OutputStreamResult" level="INFO"></logger>
	<logger name="it.polimi.deib.streams.oracle.s2r.Windower" level="INFO"></logger>
</configuration>